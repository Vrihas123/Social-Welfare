<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.hackstrangely.hackstrangely.hackstrangely.hackstrangely.hackstrangely.hackstrangely.helpinghand.ngo_end.view.NgoEndFragment"
    android:background="#263238">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/ngo_details_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="NGO name"
                android:background="#004D40"
                android:padding="5dp"
                android:textColor="@color/white"
                android:textSize="25dp"
                android:gravity="center"/>

            <!--<TextView-->
                <!--android:id="@+id/ngo_details_txt"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:textSize="17dp"-->
                <!--android:gravity="center"-->
                <!--android:layout_margin="8dp"-->
                <!--android:text="details about the ngo"-->
                <!--android:textColor="@color/white"-->
                <!--/>-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Quantity you have donated : \n (in kg or number) "
                    android:textColor="@color/white"
                    android:paddingLeft="5dp"
                    android:textSize="18dp"/>
                <EditText
                    android:id="@+id/donation_quantity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/rounded_corner_border"
                    android:hint="Enter your quantity here"
                    android:textColorHint="#ECEFF1"
                    android:textColor="@color/white"
                    android:textSize="18dp"/>

            </LinearLayout>

            <EditText
                android:id="@+id/donation_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:gravity="center"
                android:layout_marginTop="15dp"
                android:background="@drawable/rounded_corner_border"
                android:hint="Enter your details of donation here"
                android:textColorHint="#ECEFF1"
                android:textColor="@color/white"
                android:textSize="18dp"/>
            <ProgressBar
                android:id="@+id/progressBar_end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:visibility="gone"/>

            <Button
                android:id="@+id/btn_detail_submit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#004D40"
                android:text="Submit"
                android:layout_marginTop="15dp"
                android:textColor="@color/white"
                />

        </LinearLayout>


    </RelativeLayout>



</ScrollView>
